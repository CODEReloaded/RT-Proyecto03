<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Blood group</th>
      <th>Posts</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Cellphone</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_name %></td>
        <td><%= answer.blood_group %></td>
        <td><%= answer.posts %></td>
        <td><%= answer.email %></td>
        <td><%= answer.phone %></td>
        <td><%= answer.cellphone %></td>
        <td><%= answer.message %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
