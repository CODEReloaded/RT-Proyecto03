<div class="border-form-div">
<div class="row">
        <div class="col-sm-offset-3 col-sm-6" style="text-align:center;">
          <h2>Ingresar</h2>
        </div>
      </div>

<div class="row">
  <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3  col-sm-10 col-md-8 col-lg-6">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="form-group row">
        <div class="col-sm-8">
          <%= f.input :email, required: true, autofocus: true, :class => "form-control" %>
        </div>
        <div class="col-sm-12">
          <small class="text-muted">Escribe el email con el que te registraste</small>
        </div>
      </div>
    
<div class="form-group row">
        <div class="col-sm-8">
          <%= f.input :password, required: true, :class => "form-control" %>
        </div>
        <div class="col-sm-12">
          <small class="text-muted">Escribe tu contrase√±a</small>
        </div>
      </div>
  

  
    <%= f.button :submit, "Ingresar", class:"btn btn-primary col-sm-offset-5" %>
  
<% end %>


</div>
</div>
</div>
