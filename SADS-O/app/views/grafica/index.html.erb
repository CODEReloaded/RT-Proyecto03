    <div class="container">
      <nav>
        <ul class="pager">
          <li><%= link_to 'Â« Regresar', root_path %></li>
          <li><a href=""><div id='png'></div></a></li>
        </ul>
      </nav>
    </div>
    <br/>
    <!--Div that will hold the pie chart-->
    <div id="chart_div" style="width: 1300px; height: 700px;margin-left:-40px"></div>
     
  </body>
</html>